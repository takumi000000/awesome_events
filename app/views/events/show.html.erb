<h1 class="mt-3 mb-3"><%= @event.name %></h1>
<div class="row">
  <div class="col-8">
    <div class="card mb-2">
      <h5 class="card-header">イベント内容</h5>
      <div class="card-body">
        <p class="card-text"><%= @event.content %></p>
      </div>
    </div>
    <div class="card mb-2">
      <h5 class="card-header">開催時間</h5>
      <div class="card-body">
        <p class="card-text"><%= "#{l(@event.start_at, format: :long)} - #{l(@event.end_at, format: :long)}" %></p>
      </div>
    </div>
    <div class="card mb-2">
      <h5 class="card-header">開催場所</h5>
      <div class="card-body">
        <p class="card-text"><%= @event.place %></p>
      </div>
    </div>
    <div class="card mb-2">
      <h5 class="card-header">主催者</h5>
      <div class="card-body">
        <%= button_to("https://github.com/#{@event.owner.name}", class: "card-link") do %>
          <%= image_tag @event.owner.image_url, width: 50, height: 50 %>
          <%= "@#{@event.owner.name}" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-4">
    <% if @event.created_by?(current_user) %>
      <%= link_to "イベントを編集する", edit_event_path(@event), class: "btn btn-info btn-lg btn-block" %>
      <%= button_to "イベントを削除する", event_path(@event), class: "btn btn-danger btn-lg btn-block", method: :delete, data: { confirm: "本当に削除しますか？" } %>
    <% end %>
    <% if @ticket %>
      <%= button_to "参加をキャンセルする", event_ticket_path(@event, @ticket), method: :delete, class: "btn btn-warning btn-lg btn-block" %>
    <% elsif logged_in? %>
      <button class="btn btn-primary btn-lg btn-block" data-bs-toggle="modal" data-bs-target="#createTicket">参加する</button>
      <div class="modal fade" id="createTicket">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="dialogHeader">参加コメント</h4>
              <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
          <%= form_with(model: @event.tickets.build, url: event_tickets_path(@event)) do |f| %>
            <div class="modal-body">
              <div id="createTicketErrors"></div>
              <%= f.text_field :comment, class: "form-control" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-bs-dismiss="modal">キャンセル</button>
              <%= f.button "送信", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% else %>
      <%= button_to "参加する", new_event_ticket_path(@event), class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
    </div>

    <hr>
      <div class="card mb-2">
        <h5 class="card-header">参加者</h5>
        <ul class="list-group list-group-flush">
          <% @tickets.each do |ticket| %>
            <li class="list-group-item">
              <%= link_to(url_for_github(ticket.user), class: "card-link") do %>
                <%= image_tag ticket.user.image_url, width: 20, height: 20 %>
                <%= "@#{ticket.user.name}" %>
              <% end %>
              <%= ticket.comment %>
            </li>
          <% end %>
        </ul>
      </div>
  </div>
</div>